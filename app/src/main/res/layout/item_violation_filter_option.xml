<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/violationOptionLayout"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_filter_option_unselected"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/violationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Violation Name"
        android:textColor="#364153"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/violationCheckmark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_checkmark"
        android:visibility="gone"
        android:contentDescription="Selected" />
</LinearLayout>
