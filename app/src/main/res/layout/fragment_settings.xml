<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="3dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <FrameLayout
            android:id="@+id/menuIcon"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_menu_icon"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="Menu"
                android:src="@drawable/ic_menu" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/settings"
            android:textColor="@color/settings_purple"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">



        <!-- Appearance Section -->
        <LinearLayout
            android:id="@+id/appearanceSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <!-- Section Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_section_indicator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/appearance"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Theme Options Card -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_settings_card"
                android:elevation="0dp"
                android:paddingStart="21dp"
                android:paddingTop="21dp"
                android:paddingEnd="21dp"
                android:paddingBottom="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Light Theme Button -->
                    <FrameLayout
                        android:id="@+id/lightThemeButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/bg_theme_button">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:id="@+id/lightThemeIconContainer"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_theme_icon">

                                <ImageView
                                    android:id="@+id/lightThemeIcon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/theme_icon"
                                    android:src="@drawable/ic_sun"
                                    app:tint="@color/warning_orange" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/lightThemeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/theme_light"
                                android:textColor="@color/settings_text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Selection Indicator (visible when selected) -->
                        <FrameLayout
                            android:id="@+id/lightThemeIndicator"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-4dp"
                            android:background="@drawable/bg_selection_indicator"
                            android:clickable="false"
                            android:focusable="false"
                            android:elevation="4dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <View
                                android:id="@+id/lightThemeIndicatorDot"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_section_indicator" />
                        </FrameLayout>
                    </FrameLayout>

                    <!-- Dark Theme Button -->
                    <FrameLayout
                        android:id="@+id/darkThemeButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/bg_theme_button">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:id="@+id/darkThemeIconContainer"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_theme_icon">

                                <ImageView
                                    android:id="@+id/darkThemeIcon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/theme_icon"
                                    android:src="@drawable/ic_moon"
                                    app:tint="@color/settings_purple" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/darkThemeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/theme_dark"
                                android:textColor="@color/settings_text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Selection Indicator (visible when selected) -->
                        <FrameLayout
                            android:id="@+id/darkThemeIndicator"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-4dp"
                            android:background="@drawable/bg_selection_indicator"
                            android:clickable="false"
                            android:focusable="false"
                            android:elevation="4dp"
                            android:visibility="gone">

                            <View
                                android:id="@+id/darkThemeIndicatorDot"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_section_indicator" />
                        </FrameLayout>
                    </FrameLayout>

                    <!-- Auto Theme Button -->
                    <FrameLayout
                        android:id="@+id/autoThemeButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/bg_theme_button">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:id="@+id/autoThemeIconContainer"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_theme_icon">

                                <ImageView
                                    android:id="@+id/autoThemeIcon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/theme_icon"
                                    android:src="@drawable/ic_auto_theme"
                                    app:tint="@color/primary_blue" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/autoThemeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/theme_auto"
                                android:textColor="@color/settings_text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Selection Indicator (visible when selected) -->
                        <FrameLayout
                            android:id="@+id/autoThemeIndicator"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-4dp"
                            android:background="@drawable/bg_selection_indicator"
                            android:clickable="false"
                            android:focusable="false"
                            android:elevation="4dp"
                            android:visibility="gone">

                            <View
                                android:id="@+id/autoThemeIndicatorDot"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_section_indicator" />
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Language Section -->
        <LinearLayout
            android:id="@+id/languageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <!-- Section Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_section_indicator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/language"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Language Options Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_settings_card"
                android:elevation="0dp"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- English Language Button -->
                <FrameLayout
                    android:id="@+id/englishLanguageButton"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_language_button">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <!-- Flag Container -->
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_language_flag">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/language_flag"
                                tools:text="ðŸ‡ºðŸ‡¸"
                                android:textSize="24sp" />
                        </FrameLayout>

                        <!-- Language Name and Translation -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/english"
                                android:textColor="@color/settings_text_title"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/language_english"
                                android:textColor="@color/settings_text_secondary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Selection Checkmark (visible when selected) -->
                        <FrameLayout
                            android:id="@+id/englishLanguageIndicator"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_selection_indicator"
                            android:clickable="false"
                            android:focusable="false"
                            android:elevation="2dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/selected_indicator"
                                android:src="@drawable/ic_checkmark_white"
                                app:tint="@color/settings_gradient_accent" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>

                <!-- Vietnamese Language Button -->
                <FrameLayout
                    android:id="@+id/vietnameseLanguageButton"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:background="@drawable/bg_language_button">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <!-- Flag Container -->
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_language_flag">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/language_flag"
                                tools:text="ðŸ‡»ðŸ‡³"
                                android:textSize="24sp" />
                        </FrameLayout>

                        <!-- Language Name and Translation -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vietnamese"
                                android:textColor="@color/settings_text_title"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/language_vietnamese"
                                android:textColor="@color/settings_text_secondary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Selection Checkmark (visible when selected) -->
                        <FrameLayout
                            android:id="@+id/vietnameseLanguageIndicator"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_selection_indicator"
                            android:clickable="false"
                            android:focusable="false"
                            android:elevation="2dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/selected_indicator"
                                android:src="@drawable/ic_checkmark_white"
                                app:tint="@color/settings_gradient_accent" />
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
