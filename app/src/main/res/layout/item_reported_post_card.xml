<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/background_light"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/post_card_bg"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/border_gray"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Title -->
            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                tools:text="Spam Advertisement for Math Courses"
                android:textColor="@color/post_title_text"
                android:textSize="16sp" />

            <!-- Author and Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    tools:text="by Sarah Wilson"
                    android:textColor="@color/post_metadata_text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif"
                    android:text="•"
                    android:textColor="@color/post_separator"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    tools:text="November 15, 2025"
                    android:textColor="@color/post_metadata_text"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Categories -->
            <TextView
                android:id="@+id/postCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                tools:text="Mathematics › Pure Mathematics › Algebra"
                android:textColor="@color/post_content_text"
                android:textSize="12sp" />

            <!-- Description -->
            <TextView
                android:id="@+id/postDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8dp"
                tools:text="This post is pure spam advertising paid courses with no educational value and multiple affiliate links."
                android:textColor="@color/post_content_text"
                android:textSize="14sp" />

            <!-- Violation and Report Badges -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Violation Badge -->
                <LinearLayout
                    android:id="@+id/violationBadgeContainer"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_violation_badge"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_warning"
                        app:tint="@color/violation_badge_text" />

                    <TextView
                        android:id="@+id/violationBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif"
                        tools:text="2 violations"
                        android:textColor="@color/violation_badge_text"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Report Badge -->
                <LinearLayout
                    android:id="@+id/reportBadgeContainer"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_report_badge"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_reports"
                        app:tint="@color/report_badge_text" />

                    <TextView
                        android:id="@+id/reportBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif"
                        tools:text="20 reports"
                        android:textColor="@color/report_badge_text"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Dismiss Button -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/dismissButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_dismiss_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:id="@+id/dismissIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_close"
                            app:tint="@color/dismiss_button_text" />

                        <TextView
                            android:id="@+id/dismissText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/dismiss"
                            android:textColor="@color/dismiss_button_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/dismissLoadingIndicator"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="@color/dismiss_button_text" />
                </FrameLayout>

                <!-- Delete Button -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/deleteButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_delete_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:id="@+id/deleteIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_delete"
                            app:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/deleteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/delete_post"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/deleteLoadingIndicator"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="@android:color/white" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
