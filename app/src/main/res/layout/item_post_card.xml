<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/background_light"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/post_card_bg"
        app:cardCornerRadius="@dimen/modern_corner_radius"
        app:cardElevation="0dp"
        app:strokeColor="@color/border_gray"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Title -->
            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/post_title_text"
                android:textSize="16sp"
                tools:text="Misleading Information about React" />

            <!-- Author and Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/post_metadata_text"
                    android:textSize="14sp"
                    tools:text="by John Doe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="sans-serif"
                    android:text="•"
                    android:textColor="@color/post_separator"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/post_metadata_text"
                    android:textSize="13sp"
                    tools:text="November 18, 2025" />

            </LinearLayout>

            <!-- Categories/Tags as breadcrumb -->
            <TextView
                android:id="@+id/postCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/post_content_text"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp"
                tools:text="Information Technology › Software Engineering › Web Development" />

            <!-- Description -->
            <TextView
                android:id="@+id/postDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:textColor="@color/post_content_text"
                android:textSize="14sp"
                tools:text="This article contains misleading information about React best practices and promotes outdated patterns that could harm application performance." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
