<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:elevation="3dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/menuIcon"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_menu_icon"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/menu_icon"
                android:src="@drawable/ic_menu" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ai_moderation"

            android:textStyle="bold"
            android:textColor="#EC4899"
            android:fontFamily="sans-serif-medium"
            android:textSize="28sp" />

    </RelativeLayout>

    <!-- Tabs -->
    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_height"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- AI Approved Tab -->
        <LinearLayout
            android:id="@+id/tabApproved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tabApprovedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_approved"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/tab_selected"
                android:layout_marginBottom="@dimen/spacing_small" />

            <View
                android:id="@+id/tabApprovedIndicator"
                android:layout_width="150dp"
                android:layout_height="@dimen/tab_indicator_height"
                android:background="@drawable/bg_tab_indicator"
                android:visibility="visible" />
        </LinearLayout>

        <!-- AI Rejected Tab -->
        <LinearLayout
            android:id="@+id/tabRejected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tabRejectedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_rejected"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/tab_unselected"
                android:layout_marginBottom="@dimen/spacing_small" />

            <View
                android:id="@+id/tabRejectedIndicator"
                android:layout_width="150dp"
                android:layout_height="@dimen/tab_indicator_height"
                android:background="@drawable/bg_tab_indicator"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <!-- Search and Actions Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:gravity="center_vertical"
        android:background="@color/background_light"
        app:layout_constraintTop_toBottomOf="@id/tabsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Field -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/search_bar_height"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:layout_marginEnd="@dimen/spacing_small">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:contentDescription="@string/search_icon"
                android:layout_marginStart="@dimen/spacing_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/searchField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/search_ai_moderation_hint"
                android:textColorHint="@color/search_hint"
                android:textSize="@dimen/text_size_normal"
                android:background="@android:color/transparent"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_normal"
                android:singleLine="true"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/searchIcon"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Sort Button -->
        <FrameLayout
            android:id="@+id/sortButton"
            android:layout_width="@dimen/action_button_size"
            android:layout_height="@dimen/action_button_size"
            android:background="@drawable/bg_action_button"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_sort"
                android:contentDescription="@string/sort_icon"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>

    <!-- Posts RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar (Loading Indicator) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/postsRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/postsRecyclerView"
        app:layout_constraintStart_toStartOf="@id/postsRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/postsRecyclerView" />

    <!-- Empty State (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/postsRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_posts_found"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
