<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sort_by"
            android:textColor="#0F172B"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E2E8F0" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- What to sort by section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_to_sort_by"
            android:textColor="#45556C"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <!-- Reports Button -->
            <LinearLayout
                android:id="@+id/reportsButton"
                android:layout_width="0dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_sort_option_selected"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_sort_icon_selected">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_reports"
                        app:tint="#4F39F6"
                        android:contentDescription="@string/reports" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/reports"
                    android:textColor="#0F172B"
                    android:textSize="14sp" />

                <!-- Selection indicator -->
            </LinearLayout>

            <!-- Violations Button -->
            <LinearLayout
                android:id="@+id/violationsButton"
                android:layout_width="0dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_sort_option_unselected"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_sort_icon_unselected">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_warning"
                        app:tint="#e7000b"
                        android:contentDescription="@string/violations" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/violations"
                    android:textColor="#45556C"
                    android:textSize="14sp" />

                <!-- Selection indicator (hidden) -->
                <View
                    android:id="@+id/violationsIndicator"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="-95dp"
                    android:layout_marginEnd="-10dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_radio_selected" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#E2E8F0"
            android:layout_marginBottom="24dp" />

        <!-- Sort order section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_order"
            android:textColor="#45556C"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Low to High -->
        <LinearLayout
            android:id="@+id/lowToHighButton"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_sort_order_selected"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_sort_arrow_selected">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="#009966"
                    android:contentDescription="@string/low_to_high" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low_to_high"
                    android:textColor="#0F172B"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fewest_first"
                    android:textColor="#62748E"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/lowToHighIndicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_radio_order_selected" />
        </LinearLayout>

        <!-- High to Low -->
        <LinearLayout
            android:id="@+id/highToLowButton"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_sort_order_unselected"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_sort_arrow_unselected">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="#94A3B8"
                    android:contentDescription="@string/high_to_low" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_to_low"
                    android:textColor="#314158"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/most_first"
                    android:textColor="#62748E"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/highToLowIndicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_radio_order_unselected" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E2E8F0" />

    <!-- Footer with Apply Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/apply"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/bg_button_primary"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
