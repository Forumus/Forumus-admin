<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_users"
            android:textColor="@color/dialog_title_text"
            android:textSize="18sp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/border_gray" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp">

        <!-- Header with Clear All -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/select_filters"
                android:textColor="@color/dialog_description_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/clearAllButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_all"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Status Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textColor="@color/dialog_section_text"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Status Filter Options Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- First Row: Normal and Remind -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:id="@+id/normalButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_filter_option_unselected"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/normal"
                            android:textColor="@color/text_body"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/normalCheckmark"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_checkmark"
                            android:visibility="gone"
                            android:contentDescription="@string/normal" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:id="@+id/remindButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_filter_option_unselected"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/remind"
                            android:textColor="@color/text_body"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/remindCheckmark"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_checkmark"
                            android:visibility="gone"
                            android:contentDescription="@string/remind" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Second Row: Warning and Ban -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:id="@+id/warningButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_filter_option_unselected"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/warning"
                            android:textColor="@color/text_body"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/warningCheckmark"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_checkmark"
                            android:visibility="gone"
                            android:contentDescription="@string/warning" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:id="@+id/banButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_filter_option_unselected"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ban"
                            android:textColor="@color/text_body"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/banCheckmark"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_checkmark"
                            android:visibility="gone"
                            android:contentDescription="@string/ban" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Role Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role"
            android:textColor="@color/dialog_section_text"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Role Filter Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp">

                <LinearLayout
                    android:id="@+id/teacherButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_filter_option_unselected"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/teacher"
                        android:textColor="@color/text_body"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/teacherCheckmark"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_checkmark"
                        android:visibility="gone"
                        android:contentDescription="@string/teacher" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp">

                <LinearLayout
                    android:id="@+id/studentButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_filter_option_unselected"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/student"
                        android:textColor="@color/text_body"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/studentCheckmark"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_checkmark"
                        android:visibility="gone"
                        android:contentDescription="@string/student" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/border_gray" />

    <!-- Footer with Apply Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/apply"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/bg_button_primary"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
